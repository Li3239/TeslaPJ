{{ 'section-video-banner.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Video Banner",
  "settings": [
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL",
      "default": "https://www.example.com/video.mp4"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "text",
      "id": "button_label_1",
      "label": "First button label",
      "default": "Show More"
    },
    {
      "type": "url",
      "id": "button_url_1",
      "label": "First button link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Second button label",
      "default": "Popular Products"
    },
    {
      "type": "url",
      "id": "button_url_2",
      "label": "Second button link",
      "default": "/collections/all"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "presets": [{
    "name": "Video Banner",
    "category": "Media"
  }]
}
{% endschema %}

{% stylesheet %}
/* CSS styles go here */
{% endstylesheet %}

{% javascript %}
/* Optional JavaScript */
{% endjavascript %}

<!-- <div class="video-banner banner__box content-container content-container--full-width-mobile color-{{ section.settings.color_scheme }} gradient"> -->
<div class="video-banner content-container content-container--full-width-mobile color-{{ section.settings.color_scheme }}">
  <video autoplay loop muted playsinline>
    <source src="{{ section.settings.video_url }}" type="video/mp4">
    Your browser does not support the video tag.
  </video>
  <div class="video-banner-content">
    <h2 class="banner__heading inline-richtext h1">{{ section.settings.heading }}</h2>
    <div class="banner__buttons banner__buttons--multiple">
      <a href="{{ section.settings.button_url_1 }}" class="button button--primary">{{ section.settings.button_label_1 }}</a>
      <a href="{{ section.settings.button_url_2 }}" class="button button--secondary">{{ section.settings.button_label_2 }}</a>
    </div>
  </div>
</div>